{
  "name": "eslint-plugin-safeword",
  "version": "0.6.0",
  "description": "ESLint plugin with rules optimized for LLM coding agents",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TheMostlyGreat/safeword.git",
    "directory": "packages/eslint-plugin"
  },
  "homepage": "https://github.com/TheMostlyGreat/safeword/tree/main/packages/eslint-plugin",
  "bugs": {
    "url": "https://github.com/TheMostlyGreat/safeword/issues"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@eslint/js": "^9.39.2",
    "@next/eslint-plugin-next": "^16.1.1",
    "@tanstack/eslint-plugin-query": "^5.91.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-astro": "^1.5.0",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jsdoc": "^61.5.0",
    "eslint-plugin-playwright": "^2.4.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-regexp": "^2.10.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-better-tailwindcss": "^3.8.0",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-vitest": "^0.5.4",
    "typescript-eslint": "^8.51.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^9.35.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.15"
  },
  "peerDependencies": {
    "eslint": "^9.35.0",
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "keywords": [
    "eslint",
    "eslint-plugin",
    "safeword",
    "llm",
    "ai-coding",
    "claude-code",
    "typescript"
  ],
  "author": "Alex Redmon",
  "license": "MIT"
}
