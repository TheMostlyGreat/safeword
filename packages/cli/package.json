{
  "name": "safeword",
  "version": "0.2.8",
  "description": "CLI for setting up and managing safeword development environments",
  "type": "module",
  "bin": {
    "safeword": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "templates"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src tests",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm audit --audit-level=high && npm run build && npm test"
  },
  "dependencies": {
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "cli",
    "safeword",
    "developer-experience",
    "linting",
    "claude-code"
  ],
  "author": "",
  "license": "MIT"
}
